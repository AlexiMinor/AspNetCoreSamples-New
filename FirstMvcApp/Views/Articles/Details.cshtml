@model NewsDetailViewModel

<div class="container">
    <div class="row gx-5">
        <div class="col-3">
            <h1>@Model.NewsDetailModel.Title</h1>
        </div>
        <div class="offset-6 col-3">
            <p>
                @Model.NewsDetailModel.SourceName
            </p>
            <p>
                @Model.NewsDetailModel.CreationDate
            </p>
        </div>
        <div class="col-12">
            Date Time now: @DateTime.Now.ToString("F")
        </div>
        <cache expires-on="DateTimeOffset.Now.AddDays(1)">
            <div class="col-12">
                @await Html.PartialAsync("DateTimePartial")
            </div>
        </cache>
    </div>
    <hr />
    <a asp-controller="Articles" asp-action="Edit" asp-route-id="@Model.NewsDetailModel.Id">Edit</a>
    <hr />
    <div class="row gx-5">
        @foreach (var comment in Model.Comments)
        {
            <div class="offset-2 col-8">
                <div class="card">
                    <h5 class="card-title">@comment.UserName</h5>
                    <div class="card-body">
                        @comment.Text
                    </div>
                    <div class="card-footer text-muted">
                        Published: @comment.CreationDate
                    </div>
                </div>
            </div>
        }
        <hr />

    </div>
</div>
