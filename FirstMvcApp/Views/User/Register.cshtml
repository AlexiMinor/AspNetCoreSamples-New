@model UserRegisterViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="container">
    <h2>Login</h2>
    
    <div class="row gx-5">
        
        @using (Html.BeginForm("Register", "User",null, FormMethod.Post, true, new {@class = "form-group"} ))
        {
            <div class="mb-3">
                @Html.LabelFor(model => model.Model.FirstName, "First Name")
                @Html.TextBoxFor(model => model.Model.FirstName, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Model.RoleId, "Role")
                @Html.DropDownListFor(model => model.Model.RoleId, Model?.Roles, "Select Role")
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Model.RoleId, "Role")
                <select asp-for="Model.RoleId" asp-items="Model.Roles">
                    <option selected="selected" disabled="disabled">SELECT</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        }

